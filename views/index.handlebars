<div class="container">
  <div class="row" id="row1">
  <div class="col align-self-center">
    <h1>Eat-Da-Yummy-Burger! (or not)</h1>
  <br>
  <img src="assets\img\cuteburger.jpg" class="img-fluid" alt="yummy burger">
    </div>
  </div>
</div>

<div class="container">
 <div class="row" id="row2">
 <div class="col align-self-center">
    <h2 id="NewBurger">Enter A New Burger</h2>
    
<form class="create-form">
 <div class="form-group"></div>
 <label for="burgername">Burger Name:</label>
 <input type="text" id="addnewburger" name="name" style="height: 18px;">
 <button class="btn btn-secondary btn-sm" type="submit">Add Burger</button>
   </div>
  </form>
 </div>
</div>
</div>

<div class="container" id="tables">
 <div class="row justify-content-around">

 <div class="col-4" id="column1">
  <h2 class="titles">Burgers patiently waiting to be devoured:</h2>
   {{#each burgers}}
    {{#unless devoured}}
     {{>burgers/burgerbutton devoured=false}}
    {{/unless}}
   {{/each}}
</ul>
</div>

 <div class="col-4" id="column2">
  <h2 class="titles">Burgers that have fulfilled their destiny!</h2>
   {{#each burgers}}
    {{#if devoured}}
     {{>burgers/burgerbutton devoured=true}}
    {{/if}}
   {{/each}}
</ul>
</div>

